@{
    ViewData["Title"] = "Error en Asignaturas";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<div class="container mt-5 text-center">
    <div class="alert alert-danger shadow-lg p-4 rounded">
        <h1 class="text-danger">
            <i class="fas fa-exclamation-triangle"></i> Ocurrió un error
        </h1>
        <p class="mt-3">Lo sentimos, hubo un problema al procesar tu solicitud.</p>
        <p><strong>Mensaje del error:</strong> @ViewData["ErrorMessage"]</p>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
